# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.{js,json}]
indent_style = space
indent_size = 2

[*.{yaml,yml}]
indent_style = space
indent_size = 2

[*.{sh,bash}]
indent_style = space
indent_size = 4

[*.sql]
indent_style = space
indent_size = 2

[*.apib]
indent_style = space
indent_size = 4

[Caddyfile]
indent_style = space
indent_size = 4

[*.tf]
indent_style = space
indent_size = 2
